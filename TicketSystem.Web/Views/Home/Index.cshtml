@using TicketSystem.Web.Models;
@model IEnumerable<HomePageTicketViewModel>
@{
    ViewBag.Title = "Ticket System";  
}

<h1>@ViewBag.Title</h1>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><b>Category:</b> @ticket.CategoryName</p>
            <p><b>Author:</b> @ticket.AuthorName</p>
            <p>@ticket.NumberOfComments comment(s)</p>
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>